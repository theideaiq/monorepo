# Client-side variables (Must start with NEXT_PUBLIC_)
# Required: Must be a valid URL (e.g. http://127.0.0.1:54321 for local)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
# Required: Can be mocked for local dev if not connecting to real Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=mock_anon_key

NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Options: local, staging, production, mobile
NEXT_PUBLIC_APP_ENV=local

# Server-side secrets

# Wayl Payment Gateway (Required for build, can be 'mock_key' for local)
WAYL_SECRET_KEY=mock_key
WAYL_WEBHOOK_SECRET=mock_secret

# Zain Payment Gateway (Required for build, can be 'mock_key' for local)
ZAIN_SECRET_KEY=mock_key

# Supabase Service Role (Server-side only, required for build)
SUPABASE_SERVICE_ROLE_KEY=mock_key
