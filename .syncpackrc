{
  "versionGroups": [
    {
      "label": "Internal packages should use workspace protocol",
      "packages": ["**"],
      "dependencies": ["@repo/**"],
      "dependencyTypes": ["dev", "prod"],
      "pinVersion": "workspace:*"
    },
    {
      "label": "Use specific versions for core framework dependencies",
      "packages": ["**"],
      "dependencies": ["react", "react-dom", "next", "typescript", "tailwindcss"],
      "dependencyTypes": ["dev", "prod", "peer"],
      "pinVersion": "highestSemver"
    }
  ]
}
